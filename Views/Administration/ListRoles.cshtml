@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "Alle Rollen";
}

<h1>Alle Rollen</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
       asp-controller="administration">Toevoegen</a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="EditRole" 
                    asp-controller="Administration" asp-route-id="@role.Id">Bewerk</a>
                <a href="#" class="btn btn-danger">Verwijder</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Nog geen rollen toegevoegd
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Gebruik de knop hieronder om rollen toe te voegen
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="administration" asp-action="CreateRole">
                Toevoegen
            </a>
        </div>
    </div>
}