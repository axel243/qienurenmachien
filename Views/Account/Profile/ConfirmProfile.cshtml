        <div class="col-sm-6">
            <h3>Nieuwe Profiel</h3>
            <form method="post">
                <input type="hidden" asp-for="Profiles[0].Id" />
                <div class="form-group">
                    <label asp-for="Profiles[0].UserName">Email / Username</label>
                    <input asp-for="Profiles[0].UserName" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Profiles[0].FirstName">Voornaam</label>
                    <input asp-for="Profiles[0].FirstName" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Profiles[0].LastName">Achternaam</label>
                    <input asp-for="Profiles[0].LastName" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Profiles[0].PhoneNumber">Telefoon</label>
                    <input asp-for="Profiles[0].PhoneNumber" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Profiles[0].Street">Straat + huisnr</label>
                    <input asp-for="Profiles[0].Street" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Profiles[0].Zipcode">Postcode</label>
                    <input asp-for="Profiles[0].Zipcode" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Profiles[0].City">Woonplaats</label>
