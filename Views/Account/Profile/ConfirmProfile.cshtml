@using QienUrenMachien.Entities
@model ApplicationUser


@{
    ViewData["Title"] = "ConfirmProfile";
    ApplicationUser User = ViewBag.User;
}


    <div class="row">
        <div class="col-sm-6">
            <h3>Huidige Profiel</h3>
            <form>
                <input type="hidden" asp-for="@User.Id" />
                <div class="form-group">
                    <label asp-for="@User.UserName">Email / Username</label>
                    <input asp-for="@User.UserName" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="@User.Firstname">Voornaam</label>
                    <input asp-for="@User.Firstname" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="@User.Lastname">Achternaam</label>
                    <input asp-for="@User.Lastname" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="@User.PhoneNumber">Telefoon</label>
                    <input asp-for="@User.PhoneNumber" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="@User.Street">Straat + huisnr</label>
                    <input asp-for="@User.Street" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="@User.Zipcode">Postcode</label>
                    <input asp-for="@User.Zipcode" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="@User.City">Woonplaats</label>
                    <input asp-for="@User.City" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="@User.Country">Land</label>
                    <input asp-for="@User.Country" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="@User.BankNumber">IBAN</label>
                    <input asp-for="@User.BankNumber" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="@User.ProfileImageUrl">Link profielfoto</label>
                    <input asp-for="@User.ProfileImageUrl" class="form-control" readonly />
                </div>
            </form>
        </div>

        <div class="col-sm-6">
            <h3>Nieuwe Profiel</h3>
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="UserName">Email / Username</label>
                    <input asp-for="UserName" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Firstname">Voornaam</label>
                    <input asp-for="Firstname" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Lastname">Achternaam</label>
                    <input asp-for="Lastname" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber">Telefoon</label>
                    <input asp-for="PhoneNumber" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Street">Straat + huisnr</label>
                    <input asp-for="Street" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Zipcode">Postcode</label>
                    <input asp-for="Zipcode" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="City">Woonplaats</label>
                    <input asp-for="City" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Country">Land</label>
                    <input asp-for="Country" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="BankNumber">IBAN</label>
                    <input asp-for="BankNumber" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="ProfileImageUrl">Link profielfoto</label>
                    <input asp-for="ProfileImageUrl" class="form-control" readonly />
                </div>
                <button type="submit" class="btn btn-primary" asp-controller="Profile" asp-action="AcceptedProfile">Accepteren</button>
                <button type="submit" class="btn btn-primary" asp-controller="Profile" asp-action="DeniedProfile">Weigeren</button>
            </form>
        </div>
    </div>



