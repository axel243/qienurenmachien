@using QienUrenMachien.Entities
@model List<ApplicationUser>

@{
    ViewData["Title"] = "ConfirmProfile";
}


<div class="row">
    <div class="col-sm-6">
        <h3>Huidige Profiel</h3>
        <form>
            <input type="hidden" asp-for="@Model[0].Id" />
            <div class="form-group">
                <label asp-for="@Model[0].UserName">Email / Username</label>
                <input asp-for="@Model[0].UserName" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model[0].Firstname">Voornaam</label>
                <input asp-for="@Model[0].Firstname" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model[0].Lastname">Achternaam</label>
                <input asp-for="@Model[0].Lastname" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model[0].PhoneNumber">Telefoon</label>
                <input asp-for="@Model[0].PhoneNumber" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model[0].Street">Straat + huisnr</label>
                <input asp-for="@Model[0].Street" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model[0].Zipcode">Postcode</label>
                <input asp-for="@Model[0].Zipcode" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model[0].City">Woonplaats</label>
                <input asp-for="@Model[0].City" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model[0].Country">Land</label>
                <input asp-for="@Model[0].Country" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model[0].ProfileImageUrl">Link profielfoto</label>
                <input asp-for="@Model[0].ProfileImageUrl" class="form-control" readonly />
            </div>
        </form>
    </div>

    <div class="col-sm-6">
        <h3>Nieuwe Profiel</h3>
        <form method="post">
            <input type="hidden" asp-for="@Model[1].Id" />
            <div class="form-group">
                <label asp-for="@Model[1].UserName">Email / Username</label>
                <input asp-for="@Model[1].UserName" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model[1].Firstname">Voornaam</label>
                <input asp-for="@Model[1].Firstname" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model[1].Lastname">Achternaam</label>
                <input asp-for="@Model[1].Lastname" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model[1].PhoneNumber">Telefoon</label>
                <input asp-for="@Model[1].PhoneNumber" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model[1].Street">Straat + huisnr</label>
                <input asp-for="@Model[1].Street" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model[1].Zipcode">Postcode</label>
                <input asp-for="@Model[1].Zipcode" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model[1].City">Woonplaats</label>
                <input asp-for="@Model[1].City" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model[1].Country">Land</label>
                <input asp-for="@Model[1].Country" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="@Model[1].ProfileImageUrl">Link profielfoto</label>
                <input asp-for="@Model[1].ProfileImageUrl" class="form-control" readonly />
            </div>
            <button type="submit" class="btn btn-primary">Accepteren</button>
        </form>
    </div>
    </div>



