    <div>
        @using (Html.BeginForm("AddSheet", "Sheet",new {Year = ViewBag.Year, Month = ViewBag.Month }))
        {
            <table>
                <tr>
                    <th>Datum</th>
                    <th>Opdracht</th>
                    <th>Opdracht Uren</th>
                    <th>Overwerk</th>
                    <th>Verlof</th>
                    <th>Ziek</th>
                    <th>Training</th>
                    <th>Overig</th>
                    <th>Verklaring m.b.t. overig</th>
                </tr>

