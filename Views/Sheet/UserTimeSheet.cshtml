
@using Newtonsoft.Json.Linq;
@model TimeSheetViewModel;
@using QienUrenMachien.Translation;
@{
	ViewData["Title"] = "Urenformulier";
	int x = 1;
	int y = 0;
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script>
    window.onload = function () {
        loadChart();
    };
</script>

<h1 style="text-align: center;">Urenformulier van gebruiker</h1>
<div style="width: 500px; height: 500px; margin: 0 auto;">
<canvas id="doughnut" ></canvas>
    </div>
<p hidden id="SheetID">@Model.SheetID</p>
<p hidden id="Url">@Model.Url</p>


<table id="OverViewTable" style="width:100%;">
	<tr>
		<th>Project</th>
		<th>Maand</th>
		<th>Projecturen</th>
		<th>Overwerk</th>
		<th>Ziek</th>
		<th>Afwezig</th>
		<th>Training</th>
		<th>Overige</th>
		<th>Ingeleverd</th>
		<th>Goedgekeurd</th>
	</tr>
	<tr>
		<td>@Model.Project</td>
		<td>@Translator.TranslateMonth(Model.Month)</td>
		<td>@Model.ProjectHours</td>
		<td>@Model.Overwork</td>
		<td>@Model.Sick</td>
		<td>@Model.Absence</td>
		<td>@Model.Training</td>
		<td>@Model.Other</td>
		@if (@Model.Submitted)
		{
			<td data-toggle="tooltip" title="Ingeleverd" data-placement="right"><img src="~/Uploads/Images/check-circle-solid.svg" width="20" height="20" /></td>
		}
		@if (!@Model.Submitted)
		{
			<td data-toggle="tooltip" title="Niet ingeleverd" data-placement="right"><img src="~/Uploads/Images/times-circle-solid.svg" width="20" height="20" /></td>
		}
		@if ((@Model.Approved == "Not submitted" || @Model.Approved == "Not Submitted") && Model.Submitted)
		{
			<td data-toggle="tooltip" title="In afwachting" data-placement="right"><img src="~/Uploads/Images/minus-circle-solid.svg" width="20" height="20" /></td>
		}
		@if ((@Model.Approved == "Not submitted" || @Model.Approved == "Not Submitted") && !Model.Submitted)
		{
			<td></td>
		}
		@if (@Model.Approved == "Rejected")
		{
			<td data-toggle="tooltip" title="Afgewezen" data-placement="right"><img src="~/Uploads/Images/times-circle-solid.svg" width="20" height="20" /></td>
		}
		@if (@Model.Approved == "Approved")
		{
			<td data-toggle="tooltip" title="Goedgekeurd" data-placement="right"><img src="~/Uploads/Images/check-circle-solid.svg" width="20" height="20" /></td>
		}
	</tr>
</table>
<br />


<table id="TimeSheetTable" style="width:100%;">
	<tr>
		<th>Dag</th>
		<th>Projecturen</th>
		<th>Overwerk</th>
		<th>Ziek</th>
		<th>Afwezig</th>
		<th>Training</th>
		<th>Overige</th>
	</tr>

	@if (Model.Submitted == true)
	{
		@foreach (var day in JObject.Parse(Model.Data))
		{
			DateTime dt = new DateTime(Model.theDate.Year, Model.theDate.Month, Convert.ToInt32(day.Key));
			@if (dt.ToString("dddd") == "Saturday" || dt.ToString("dddd") == "Sunday")
			{
				<tr style="background-color: #f3f3f3">
					<td>@Translator.TranslateDay(dt.ToString("dddd")) @day.Key</td>
					<td>@day.Value["projecthours"]</td>
					<td>@day.Value["overwork"]</td>
					<td>@day.Value["sick"]</td>
					<td>@day.Value["absence"]</td>
					<td>@day.Value["training"]</td>
					<td>@day.Value["other"]</td>
				</tr>
			}
			else
			{
				<tr>
					<td>@dt.ToString("dddd") @day.Key</td>
					<td>@day.Value["projecthours"]</td>
					<td>@day.Value["overwork"]</td>
					<td>@day.Value["sick"]</td>
					<td>@day.Value["absence"]</td>
					<td>@day.Value["training"]</td>
					<td>@day.Value["other"]</td>
				</tr>
			}
			}
		}
else
	{



		@foreach (var day in JObject.Parse(Model.Data))
		{
			DateTime dt = new DateTime(Model.theDate.Year, Model.theDate.Month, Convert.ToInt32(day.Key));
			@if (dt.ToString("dddd") == "Saturday" || dt.ToString("dddd") == "Sunday")
			{
				<tr style="background-color: #f3f3f3">
					<td>@Translator.TranslateDay(dt.ToString("dddd")) @day.Key</td>
					<td><input type="text" class="form-control" value="@day.Value["projecthours"]" id="@x@y"></td>
					<td><input type="text" class="form-control" value="@day.Value["overwork"]" id="@x@(y + 1)"></td>
					<td><input type="text" class="form-control" value="@day.Value["sick"]" id="@x@(y + 2)"></td>
					<td><input type="text" class="form-control" value="@day.Value["absence"]" id="@x@(y + 3)"></td>
					<td><input type="text" class="form-control" value="@day.Value["training"]" id="@x@(y + 4)"></td>
					<td><input type="text" class="form-control" value="@day.Value["other"]" id="@x@(y + 5)"></td>
				</tr>
			}
			else
			{
				<tr>
					<td>@Translator.TranslateDay(dt.ToString("dddd")) @day.Key</td>
					<td><input type="text" class="form-control" value="@day.Value["projecthours"]" id="@x@y"></td>
					<td><input type="text" class="form-control" value="@day.Value["overwork"]" id="@x@(y + 1)"></td>
					<td><input type="text" class="form-control" value="@day.Value["sick"]" id="@x@(y + 2)"></td>
					<td><input type="text" class="form-control" value="@day.Value["absence"]" id="@x@(y + 3)"></td>
					<td><input type="text" class="form-control" value="@day.Value["training"]" id="@x@(y + 4)"></td>
					<td><input type="text" class="form-control" value="@day.Value["other"]" id="@x@(y + 5)"></td>
				</tr>
			}
			x++;
		}
	}


</table>
<br />
<label asp-for="Comment"></label>
<textarea id="Comment" asp-for="Comment" class="form-control" text-wrap:normal" type="text" placeholder="Voeg commentaar toe" value="@Model.Comment"></textarea>


<div class="form-group row">
	<div class="col-sm-10">
		<a class="btn btn-primary" asp-action="SubmitTimeSheet"
		   asp-controller="Sheet" asp-route-url="@Model.Url" onclick="return confirm('Weet je het zeker?')">Indienen</a>
		@if (Model.Submitted)
		{
		<a class="btn btn-primary" asp-action="UnSubmitTimeSheet"
		   asp-controller="Sheet" asp-route-url="@Model.Url">Terugdraaien</a>
		}
		<a class="btn btn-primary" asp-action="DownloadCSV"
		   asp-controller="Sheet" asp-route-url="@Model.Url">Export naar CSV</a>
	</div>
</div>

<script src="~/js/table.js" ></script>





